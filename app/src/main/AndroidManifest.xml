<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android_app_project.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.sensor.temperature"
        android:required="true" />

    <application
        android:name="com.android_app_project.app.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.view.info.InfoActivity"/>
        <activity android:name=".ui.view.sensor.SensorRecyclerViewActivity"/>
        <activity android:name=".ui.view.sensor.data_sensors.TemperatureActivity"/>
        <activity android:name=".ui.view.sensor.data_sensors.PressureActivity"/>
        <activity android:name=".ui.view.sensor.data_sensors.BatteryActivity"/>
        <activity android:name=".ui.view.sensor.data_sensors.LightActivity"/>
        <activity android:name=".ui.view.introduction.IntroductionActivity"/>
        <activity android:name=".ui.view.login.LoginActivity"/>
        <activity android:name=".ui.view.user_creation.UserCreationActivity"/>
        <activity android:name=".ui.view.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.main.MainActivity"/>
    </application>

</manifest>